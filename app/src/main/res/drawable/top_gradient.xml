<?xml version="1.0" encoding="utf-8"?>
<!-- drawable/gradient_.xml -->
<vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="360dp"
    android:height="72dp"
    android:viewportWidth="360"
    android:viewportHeight="72"
    >

    <group>

        <clip-path
            android:pathData="M0 0H360V72H0V0Z"
            />

        <group
            android:translateX="1"
            android:translateY="0"
            android:pivotX="180"
            android:pivotY="36"
            android:scaleX="2"
            android:scaleY="2"
            android:rotation="90"
            >

            <path
                android:pathData="M0 0V72H360V0"
                >

                <aapt:attr name="android:fillColor">

                    <gradient
                        android:type="linear"
                        android:startX="90"
                        android:startY="36"
                        android:endX="270"
                        android:endY="36"
                        >

                        <item
                            android:color="#00000000"
                            android:offset="0"
                            />

                        <item
                            android:color="#4D000000"
                            android:offset="1"
                            />

                    </gradient>

                </aapt:attr>

            </path>

        </group>

    </group>

</vector>
